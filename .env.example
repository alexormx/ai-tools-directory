# AI Tools Directory - Environment Variables Example
# Copia este archivo a .env y reemplaza los valores. Nunca commitees credenciales reales.

# == Django / Backend ==
# Genera uno real con: python -c "import secrets; print('django-insecure-' + secrets.token_urlsafe(48))"
DJANGO_SECRET_KEY=django-insecure-change-me
DJANGO_DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1

# == Postgres ==
POSTGRES_USER=ai_tools
POSTGRES_PASSWORD=change_me_password
POSTGRES_DB=ai_tools
DATABASE_URL=postgresql://ai_tools:change_me_password@db:5432/ai_tools

# == Redis / Celery ==
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# == CORS ==
CORS_ALLOWED_ORIGINS=http://localhost:3000

# == n8n / Webhooks ==
# Genera uno real con: python -c "import secrets; print('n8nwhk_' + secrets.token_urlsafe(40))"
N8N_WEBHOOK_SECRET=n8nwhk_placeholder
N8N_BASIC_AUTH_USER=admin
# Genera uno real con: python -c "import secrets,string; alphabet=string.ascii_letters+string.digits; print(''.join(secrets.choice(alphabet) for _ in range(40)))"
N8N_BASIC_AUTH_PASSWORD=change_me_admin_pwd
N8N_BASIC_AUTH_ACTIVE=true
GENERIC_TIMEZONE=America/Mexico_City

# == JWT / Auth (placeholder futuro) ==
ACCESS_TOKEN_LIFETIME_MIN=30
REFRESH_TOKEN_LIFETIME_DAYS=7

# == App Settings Personalizadas ==
DEFAULT_PAGINATION_SIZE=20

# == Frontend (Next.js) ==
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
INTERNAL_API_BASE_URL=http://backend:8000
